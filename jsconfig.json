{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@databases": ["databases"],
      "@exceptions/*": ["exceptions/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@validations/*": ["validations/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/*", "./node_modules", "node_modules"]
}
